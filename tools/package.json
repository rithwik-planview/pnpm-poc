{
    "name": "@unity/tools",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "rslib build",
        "dev": "rslib build --watch",
        "format": "prettier --write .",
        "lint": "eslint .",
        "test": "jest",
        "typecheck": "pnpm typecheck:all && pnpm typecheck:build",
        "typecheck:all": "tsc -b tsconfig.json",
        "typecheck:build": "tsc -b tsconfig.build.json"
    },
    "type": "module",
    "main": "./dist/index.cjs",
    "dependencies": {
        "@formatjs/cli-lib": "^6.6.6",
        "chalk": "^5.4.1",
        "glob": "^11.0.2",
        "listr2": "^8.3.3",
        "prettier": "^3.5.3"
    },
    "devDependencies": {
        "@rslib/core": "^0.8.0",
        "@rspack/core": "^1.3.11",
        "@types/node": "^22.15.21",
        "globals": "^16.1.0",
        "typescript": "^5.8.3"
    },
    "bin": {
        "deploy-package": "./dist/deploy-cli.js",
        "i18n-extract": "./dist/i18n-extract-cli.js",
        "i18n-compile": "./dist/i18n-compile-cli.js"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "types": "./dist/index.d.ts"
}
